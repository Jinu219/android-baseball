<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <include
        layout="@layout/toolbar_game"
        android:id="@+id/toolbar_game"/>

    <TextView
        android:id="@+id/tvLifeTitle"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="남은 목숨 : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_game"
        />


    <TextView
        android:id="@+id/tvLifeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="1"
        android:layout_marginStart="95dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLifeTitle"
        app:layout_constraintTop_toTopOf="@+id/tvLifeTitle"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvLifeTitle"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>