<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_game"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#000000"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/back"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/toolbar_game"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_game"
        app:layout_constraintStart_toStartOf="@+id/toolbar_game"/>
    
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="216dp"
        android:layout_height="24dp"
        android:text="Baseball"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar_game"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_game"
        app:layout_constraintStart_toStartOf="@+id/toolbar_game"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_game"/>


</androidx.constraintlayout.widget.ConstraintLayout>